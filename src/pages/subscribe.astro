---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Subscribe - Literary Photography" description="Subscribe to our newsletter for updates on new stories, photography, and print store launches. No spam, just thoughtful content.">
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <h1>Subscribe to Our Newsletter</h1>
      <p>Stay connected with thoughtful content delivered to your inbox</p>
    </div>
  </section>

  <div class="content-wrapper">
    <!-- Newsletter Benefits -->
    <section style="margin-bottom: 4rem;">
      <div style="text-align: center; margin-bottom: 3rem;">
        <h2>What You'll Receive</h2>
        <p style="font-size: 1.125rem; color: #6b7280;">No spam, just meaningful content when we have something worth sharing</p>
      </div>

      <div class="grid grid-2" style="gap: 3rem; max-width: 800px; margin: 0 auto;">
        <div style="text-align: center;">
          <div style="width: 4rem; height: 4rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem; color: white; font-size: 1.5rem;">
            üìù
          </div>
          <h3>New Stories & Essays</h3>
          <p style="color: #6b7280;">Be among the first to read our latest literary works, including exclusive content for subscribers.</p>
        </div>

        <div style="text-align: center;">
          <div style="width: 4rem; height: 4rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem; color: white; font-size: 1.5rem;">
            üì∏
          </div>
          <h3>Photography Updates</h3>
          <p style="color: #6b7280;">Get notified when new photographs are added to our gallery and learn the stories behind them.</p>
        </div>

        <div style="text-align: center;">
          <div style="width: 4rem; height: 4rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem; color: white; font-size: 1.5rem;">
            üõí
          </div>
          <h3>Store Launch News</h3>
          <p style="color: #6b7280;">Be the first to know when our print store launches and get early access to limited editions.</p>
        </div>

        <div style="text-align: center;">
          <div style="width: 4rem; height: 4rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem; color: white; font-size: 1.5rem;">
            üí≠
          </div>
          <h3>Behind the Scenes</h3>
          <p style="color: #6b7280;">Occasional insights into the creative process and the stories behind our content.</p>
        </div>
      </div>
    </section>

    <!-- Newsletter Signup Form -->
    <section style="background: #f9fafb; padding: 3rem 2rem; border-radius: 0.5rem; max-width: 600px; margin: 0 auto 4rem;">
      <div style="text-align: center; margin-bottom: 2rem;">
        <h2>Join Our Community</h2>
        <p style="color: #6b7280;">Enter your email below to subscribe to our newsletter</p>
      </div>

      <!-- Placeholder for future newsletter service integration -->
      <div style="background: white; padding: 2rem; border-radius: 0.5rem; border: 1px solid #e5e7eb;">
        <form style="display: flex; flex-direction: column; gap: 1rem;">
          <div>
            <label for="email" style="display: block; margin-bottom: 0.5rem; font-weight: 500; color: #374151;">Email Address</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required 
              placeholder="your@email.com"
              style="width: 100%; padding: 0.75rem; border: 1px solid #d1d5db; border-radius: 0.375rem; font-size: 1rem;"
            >
          </div>
          
          <div>
            <label for="name" style="display: block; margin-bottom: 0.5rem; font-weight: 500; color: #374151;">Name <span style="color: #6b7280; font-weight: 400;">(optional)</span></label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              placeholder="Your name"
              style="width: 100%; padding: 0.75rem; border: 1px solid #d1d5db; border-radius: 0.375rem; font-size: 1rem;"
            >
          </div>
          
          <!-- Interests -->
          <div>
            <label style="display: block; margin-bottom: 0.5rem; font-weight: 500; color: #374151;">I'm most interested in:</label>
            <div style="display: flex; flex-direction: column; gap: 0.5rem;">
              <label style="display: flex; align-items: center; font-weight: 400;">
                <input type="checkbox" name="interests" value="literature" style="margin-right: 0.5rem;">
                Literary works and essays
              </label>
              <label style="display: flex; align-items: center; font-weight: 400;">
                <input type="checkbox" name="interests" value="photography" style="margin-right: 0.5rem;">
                Photography and visual stories
              </label>
              <label style="display: flex; align-items: center; font-weight: 400;">
                <input type="checkbox" name="interests" value="prints" style="margin-right: 0.5rem;">
                Print store and merchandise
              </label>
            </div>
          </div>
          
          <button 
            type="submit" 
            class="btn btn-primary"
            style="width: 100%; margin-top: 1rem;"
            onclick="handleSubscribe(event)"
          >
            Subscribe to Newsletter
          </button>
        </form>

        <!-- Privacy Notice -->
        <div style="margin-top: 2rem; padding-top: 2rem; border-top: 1px solid #e5e7eb;">
          <p style="font-size: 0.875rem; color: #6b7280; text-align: center; margin: 0;">
            We respect your privacy. No spam, ever. Unsubscribe with one click at any time.
          </p>
        </div>
      </div>
    </section>

    <!-- Alternative Ways to Follow -->
    <section style="text-align: center;">
      <h2>Other Ways to Stay Connected</h2>
      <p style="color: #6b7280; margin-bottom: 2rem;">Follow our content through these channels</p>
      
      <div class="grid grid-2" style="max-width: 500px; margin: 0 auto; gap: 2rem;">
        <div>
          <h3>RSS Feed</h3>
          <p style="color: #6b7280; margin-bottom: 1rem;">Subscribe to our RSS feed for blog updates</p>
          <a href="/feed.xml" class="btn btn-secondary" style="font-size: 0.875rem;">RSS Feed (Coming Soon)</a>
        </div>
        
        <div>
          <h3>Bookmark Us</h3>
          <p style="color: #6b7280; margin-bottom: 1rem;">Add us to your bookmarks and visit regularly</p>
          <button onclick="addBookmark()" class="btn btn-secondary" style="font-size: 0.875rem;">Add Bookmark</button>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<script>
  function handleSubscribe(event: Event) {
    event.preventDefault();
    
    // For now, show a thank you message
    // In the future, integrate with a newsletter service like ConvertKit, Mailchimp, etc.
    alert('Thank you for your interest! Newsletter signup functionality will be available soon. Please check back or contact us directly.');
  }

  function addBookmark() {
    const title = document.title;
    const url = window.location.href;
    
    // Type-safe browser detection
    if ((window as any).sidebar && (window as any).sidebar.addPanel) {
      // Firefox
      (window as any).sidebar.addPanel(title, url, '');
    } else if ((window as any).external && 'AddFavorite' in (window as any).external) {
      // Internet Explorer
      (window as any).external.AddFavorite(url, title);
    } else if ((window as any).opera) {
      // Opera
      const elem = document.createElement('a');
      elem.setAttribute('href', url);
      elem.setAttribute('title', title);
      elem.setAttribute('rel', 'sidebar');
      elem.click();
    } else {
      // Other browsers
      alert('Please bookmark this page manually (Ctrl+D or Cmd+D)');
    }
  }

  // Make functions available globally
  (window as any).handleSubscribe = handleSubscribe;
  (window as any).addBookmark = addBookmark;
</script>