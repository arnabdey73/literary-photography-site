---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get photos available for print
const photos = await getCollection('photography');
const printablePhotos = photos.filter(photo => photo.data.available_for_print);
const featuredPrints = printablePhotos.filter(photo => photo.data.featured).slice(0, 6);
---

<BaseLayout title="Print Store - Literary Photography" description="Transform our photography into beautiful prints for your home. High-quality prints, mugs, and more featuring our curated collection.">
  <!-- Hero Section -->
  <section class="hero" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
      <h1>Print Store</h1>
      <p>Transform our photography into beautiful pieces for your space</p>
      {printablePhotos.length > 0 && (
        <a href="#available-prints" class="btn btn-primary" style="background: white; color: #667eea;">Browse Available Prints</a>
      )}
    </div>
  </section>

  <!-- Coming Soon Notice -->
  <section class="section">
    <div class="container">
      <div class="content-wrapper text-center">
        <div style="background: #fef3c7; border: 1px solid #f59e0b; border-radius: 0.5rem; padding: 2rem; margin-bottom: 3rem;">
          <h2 style="color: #92400e; margin-bottom: 1rem;">üèóÔ∏è Store Coming Soon</h2>
          <p style="color: #92400e; margin-bottom: 1rem;">We're currently setting up our print store to bring you high-quality reproductions of our photography. The store will feature:</p>
          <ul style="color: #92400e; text-align: left; max-width: 400px; margin: 0 auto;">
            <li>Premium photo prints in various sizes</li>
            <li>Canvas prints and framed options</li>
            <li>Mugs, postcards, and other merchandise</li>
            <li>Secure checkout and worldwide shipping</li>
          </ul>
          <div style="margin-top: 2rem;">
            <a href="/subscribe" class="btn btn-primary">Get Notified When We Launch</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  {featuredPrints.length > 0 && (
    <section id="available-prints" class="section">
      <div class="container">
        <div class="section-title">
          <h2>Featured Prints Preview</h2>
          <p>Get a preview of some photographs that will be available as prints</p>
        </div>

        <div class="photo-grid">
          {featuredPrints.map((photo) => (
            <div class="photo-item">
              <a href={`/photography/${photo.slug}`}>
                <img 
                  src={photo.data.image} 
                  alt={photo.data.altText}
                  loading="lazy"
                />
                <div class="photo-overlay">
                  <h3 style="color: white; margin-bottom: 0.5rem; font-size: 1.125rem;">{photo.data.title}</h3>
                  <p style="color: rgba(255, 255, 255, 0.9); margin-bottom: 0.5rem; font-size: 0.875rem;">
                    {photo.data.location && `${photo.data.location}`}
                  </p>
                  <div style="display: flex; flex-wrap: wrap; gap: 0.25rem;">
                    <span style="background: rgba(255, 255, 255, 0.2); color: white; padding: 0.25rem 0.5rem; border-radius: 0.25rem; font-size: 0.75rem;">
                      Print Available
                    </span>
                    <span style="background: rgba(255, 255, 255, 0.2); color: white; padding: 0.25rem 0.5rem; border-radius: 0.25rem; font-size: 0.75rem;">
                      Coming Soon
                    </span>
                  </div>
                </div>
              </a>
            </div>
          ))}
        </div>

        <div class="text-center" style="margin-top: 3rem;">
          <a href="/photography" class="btn btn-secondary">View Full Gallery</a>
        </div>
      </div>
    </section>
  )}

  <!-- Store Features Section -->
  <section class="section" style="background-color: #f9fafb;">
    <div class="container">
      <div class="section-title">
        <h2>What to Expect</h2>
        <p>Quality and craftsmanship in every product</p>
      </div>

      <div class="grid grid-3">
        <div class="text-center" style="padding: 2rem;">
          <div style="width: 4rem; height: 4rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem; color: white; font-size: 1.5rem;">
            üñºÔ∏è
          </div>
          <h3>Premium Prints</h3>
          <p style="color: #6b7280;">Museum-quality prints on archival paper with rich colors and sharp detail.</p>
        </div>

        <div class="text-center" style="padding: 2rem;">
          <div style="width: 4rem; height: 4rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem; color: white; font-size: 1.5rem;">
            üì¶
          </div>
          <h3>Secure Packaging</h3>
          <p style="color: #6b7280;">Carefully packaged to ensure your prints arrive in perfect condition.</p>
        </div>

        <div class="text-center" style="padding: 2rem;">
          <div style="width: 4rem; height: 4rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem; color: white; font-size: 1.5rem;">
            üåç
          </div>
          <h3>Worldwide Shipping</h3>
          <p style="color: #6b7280;">Available for shipping globally with tracking and insurance options.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter Signup -->
  <section class="section">
    <div class="container">
      <div class="content-wrapper text-center">
        <h2>Be the First to Know</h2>
        <p>Get notified when our print store launches and be among the first to order limited edition prints.</p>
        <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap; margin-top: 2rem;">
          <a href="/subscribe" class="btn btn-primary">Subscribe for Updates</a>
          <a href="/photography" class="btn btn-secondary">Browse Photography</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>